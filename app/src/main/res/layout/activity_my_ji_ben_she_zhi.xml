<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_ji_ben_she_zhi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.administrator.artisan.mys.myyhxx.MyJiBenSheZhiActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45dp"
        android:background="@color/zhutise">

        <ImageView
            android:id="@+id/my_yonghu_jbsz_fh"
            android:layout_width="@dimen/size_45dp"
            android:layout_height="@dimen/size_45dp"
            android:padding="@dimen/size_6dp"
            android:src="@drawable/ic_chevron_left_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="基本设置"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_15dp"
        android:background="@color/fengexiancu" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:background="@color/fengexianxi" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp"
        android:layout_marginBottom="@dimen/size_30dp"
        android:layout_marginLeft="@dimen/size_30dp"
        android:layout_marginRight="@dimen/size_30dp"
        android:layout_marginTop="@dimen/size_20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_20dp"
            android:gravity="center"
            android:text="职业"
            android:textColor="@color/text_colcr"
            android:textSize="@dimen/size_14dp" />

        <EditText
            android:layout_margin="@dimen/size_5dp"
            android:textColor="@color/text_colcr"
            android:textSize="@dimen/size_14dp"
            android:textColorHint="@color/hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/textview_bk"
            android:cursorVisible="false"
            android:singleLine="true" />
    </com.zhy.android.percent.support.PercentLinearLayout>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="@dimen/size_30dp"
        android:layout_marginRight="@dimen/size_30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_25dp"
            android:gravity="center"
            android:text="性别"
            android:textColor="@color/text_colcr"
            android:textSize="@dimen/size_14dp" />

        <com.example.administrator.artisan.zhifu.SmoothCheckBox
            android:id="@+id/checkBox_nanxing"
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_20dp"
            android:gravity="center"
            android:textSize="@dimen/size_14dp"
            android:paddingLeft="@dimen/size_4dp"
            android:text="男性"
            android:textColor="@color/text_colcr" />


        <com.example.administrator.artisan.zhifu.SmoothCheckBox
            android:id="@+id/checkBox_nvxing"
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/size_4dp"
            android:textSize="@dimen/size_14dp"
            android:text="女性"
            android:textColor="@color/text_colcr" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="@dimen/size_30dp"
        android:layout_marginRight="@dimen/size_30dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_40dp"
            android:layout_marginRight="@dimen/size_6dp"
            android:gravity="center"
            android:text="出生日期"
            android:textColor="@color/text_colcr"
            android:textSize="@dimen/size_14dp" />

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40dp">

                <TextView
                    android:layout_margin="@dimen/size_5dp"
                    android:textColor="@color/text_colcr"
                    android:textSize="@dimen/size_14dp"
                    android:textColorHint="@color/hint"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:longClickable="true"
                    android:id="@+id/my_zhanghu_jbsz_n"
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/textview_bk" />

            </com.zhy.android.percent.support.PercentLinearLayout>

        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_shape"
        android:paddingLeft="@dimen/size_30dp"
        android:paddingRight="@dimen/size_30dp"
        android:text="确认保存"
        android:textColor="@color/white"
        android:textSize="@dimen/size_18dp" />
</com.zhy.android.percent.support.PercentLinearLayout>
