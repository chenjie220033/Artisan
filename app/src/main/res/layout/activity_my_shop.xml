<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorBai"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45dp"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:id="@+id/drawer_wodeshop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/size_45dp"
                android:layout_height="@dimen/size_45dp"
                android:padding="@dimen/size_6dp"
                android:src="@drawable/ic_chevron_left_black_24dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/drawer_wodedingcan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="我的购物"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/id_playlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_2dp"
        app:tabIndicatorColor="@color/zhutise"
        app:tabIndicatorHeight="@dimen/size_4dp"
        app:tabMode="fixed"
        app:tabTextColor="@color/text_colcr"
        app:tabSelectedTextColor="@color/zhutise"
        app:tabTextAppearance="@android:style/TextAppearance.Holo.Small" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:background="@color/fengexianxi" />
    <android.support.v4.view.ViewPager
        android:scrollbars="none"
        android:id="@+id/id_playviewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>