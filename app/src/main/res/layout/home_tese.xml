<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBai"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_15dp"
        android:background="@color/fengexiancu" />

    <TextView
        android:textColor="@color/text_colcr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_26dp"
        android:layout_margin="@dimen/size_10dp"
        android:drawablePadding="@dimen/size_10dp"
        android:gravity="center_vertical"
        android:text="@string/name_tese"
        android:textSize="@dimen/size_16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:background="@color/fengexianxi" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_240dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <include
            android:id="@+id/home_nongjiale2"
            layout="@layout/activity_nong"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="match_parent"
            android:layout_weight="4" />

        <View
            android:layout_width="@dimen/size_1px"
            android:layout_height="match_parent"
            android:background="@color/fengexianxi" />

        <LinearLayout
            android:layout_width="@dimen/size_0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical"
            android:weightSum="3">

            <include
                layout="@layout/activity_ding1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_0dp"
                android:layout_weight="1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1px"
                android:background="@color/fengexianxi" />

            <include
                layout="@layout/activity_ding2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_0dp"
                android:layout_weight="1" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1px"
                android:background="@color/fengexianxi" />
            <include
                layout="@layout/activity_yi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_0dp"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:background="@color/fengexianxi" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_15dp"
        android:background="@color/fengexiancu" />
</LinearLayout>