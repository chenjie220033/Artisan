<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/size_10dp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_45dp">

    <TextView
        android:textColor="@color/text_colcr"
        android:text="限时抢购"
        android:textSize="@dimen/size_16dp"
        android:gravity="center"
        android:paddingRight="@dimen/size_5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/textView22" />

    <ImageView
        android:src="@drawable/ico3"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/size_5dp"
        android:layout_width="@dimen/size_20dp"
        android:layout_height="@dimen/size_20dp" />
    <TextView
        android:textSize="@dimen/size_12dp"
        android:text="还剩"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/size_5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <com.example.administrator.artisan.Homes.daojishi.CountdownView
        android:id="@+id/cv_countdownViewTest1"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        app:isShowDay="false"
        app:isShowHour="true"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:isShowMillisecond="false"
        app:suffixGravity="center"
        app:suffixTextColor="@color/xianshi"
        app:suffixTextSize="@dimen/size_14dp"
        app:timeTextColor="@color/white"
        app:timeTextSize="@dimen/size_12dp"
        app:isHideTimeBackground="false"
        app:timeBgColor="@color/xianshi"
        app:isShowTimeBgDivisionLine="false" />
    <TextView
       android:layout_weight="1"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="match_parent" />

    <TextView
        android:text="限时限量>>"
        android:gravity="center"
        android:textColor="@color/xianshi"
        android:layout_marginRight="@dimen/size_10dp"
        android:textSize="@dimen/size_12dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/textView20" />
</LinearLayout>