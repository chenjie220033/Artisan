<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bao="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/size_10dp">

        <ImageView
            android:layout_width="@dimen/size_50dp"
            android:layout_height="@dimen/size_50dp"
            android:padding="@dimen/size_5dp"
            android:src="@drawable/log2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/size_10dp"
            android:paddingRight="@dimen/size_10dp"
            android:paddingTop="@dimen/size_5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="测试者"
                    android:textColor="@color/text_fu_colcr"
                    android:textSize="@dimen/size_16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-5-22  13:52"
                    android:textColor="@color/text_fu_colcr"
                    android:textSize="@dimen/size_16dp" />
            </LinearLayout>

            <com.example.administrator.artisan.robshop.RatingBarView
                android:id="@+id/home_dingzuo_xq_ratingbar2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_5dp"
                android:gravity="center_vertical"
                bao:starCount="5"
                bao:starEmpty="@drawable/ic_star_empty"
                bao:starFill="@drawable/ic_star_fill"
                bao:starImageSize="@dimen/size_15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_5dp"
                android:text="服务很好"
                android:textColor="@color/text_fu_colcr"
                android:textSize="@dimen/size_14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3.5">

                <ImageView
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="@dimen/size_60dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_banner" />

                <ImageView
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="@dimen/size_60dp"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:layout_marginRight="@dimen/size_10dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_banner" />

                <ImageView
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="@dimen/size_60dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_banner" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:background="@color/fengexianxi" />
</LinearLayout>