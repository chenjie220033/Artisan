<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bao="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_90dp"
        android:orientation="horizontal"
        android:padding="@dimen/size_10dp">

        <ImageView
            android:layout_width="@dimen/size_90dp"
            android:layout_height="@dimen/size_70dp"
            android:scaleType="fitXY"
            android:src="@drawable/thumb_5624840c310d8" />

        <LinearLayout
            android:layout_width="@dimen/size_0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/size_5dp">

            <TextView
                android:id="@+id/text_titles"
                android:textColor="@color/text_colcr"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_0dp"
                android:layout_weight="1"
                android:text="锦江大酒店"
                android:textSize="@dimen/size_14dp" />

        <TextView
            android:textSize="@dimen/size_12dp"
            android:textColor="@color/hint"
            android:text="吃喝玩乐一条龙"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="起步价：¥"
                    android:textColor="@color/hint"
                    android:textSize="@dimen/size_12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="888"
                    android:textColor="@color/zhutise"
                    android:textSize="@dimen/size_12dp" />
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="已售："
                android:textColor="@color/hint"
                android:textSize="@dimen/size_12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/zhutise"
                android:textSize="@dimen/size_12dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:textColor="@color/zhutise"
                    android:textSize="@dimen/size_12dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="评价"
                    android:layout_marginLeft="@dimen/size_5dp"
                    android:textColor="@color/hint"
                    android:textSize="@dimen/size_12dp" />
        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_juli"
                android:text="2.6km"
                android:gravity="center"
                android:textColor="@color/zhutise"
                android:textSize="@dimen/size_12dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>