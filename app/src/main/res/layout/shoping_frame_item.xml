<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_90dp"
        android:orientation="horizontal"
        android:padding="@dimen/size_10dp">

        <ImageView
            android:layout_width="@dimen/size_90dp"
            android:layout_height="@dimen/size_70dp"
            android:scaleType="fitXY"
            android:src="@drawable/thumb_5624840c310d8" />

        <LinearLayout
            android:layout_width="@dimen/size_0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/size_5dp">

            <TextView
                android:textColor="@color/text_colcr"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_0dp"
                android:layout_weight="1"
                android:text="上门西安闹"
                android:textSize="@dimen/size_16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5">

                <ImageView
                    android:layout_width="@dimen/size_15dp"
                    android:layout_height="@dimen/size_15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/size_5dp"
                    android:src="@drawable/ico3" />

                <TextView
                    android:textColor="@color/text_fu_colcr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/size_5dp"
                    android:gravity="center_vertical"
                    android:text="还剩"
                    android:textSize="@dimen/size_12dp" />

                <com.example.administrator.artisan.Homes.daojishi.CountdownView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:isHideTimeBackground="false"
                    app:isShowDay="false"
                    app:isShowHour="true"
                    app:isShowMillisecond="false"
                    app:isShowMinute="true"
                    app:isShowSecond="true"
                    app:isShowTimeBgDivisionLine="false"
                    app:suffixGravity="center"
                    app:suffixTextColor="@color/xianshi"
                    app:suffixTextSize="@dimen/size_10dp"
                    app:timeBgColor="@color/xianshi"
                    app:timeTextColor="#FFFFFF"
                    app:timeTextSize="@dimen/size_10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="已售："
                    android:textColor="@color/hint"
                    android:textSize="@dimen/size_12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/hint"
                    android:textSize="@dimen/size_12dp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/shoping_item_qiang"
                android:layout_width="@dimen/size_70dp"
                android:layout_height="@dimen/size_60dp"
                android:background="@drawable/qianggou1"
                android:gravity="center"
                android:paddingTop="@dimen/size_10dp"
                android:scaleType="fitXY"
                android:text="剩余10000份"
                android:textSize="@dimen/size_12dp" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>