<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="@dimen/size_200dp">
        <ImageView
            android:id="@+id/home_gouwu_shangpintupian"
            android:src="@drawable/gouwu_meidi"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/size_10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_100dp" />
        <TextView
            android:id="@+id/home_gouwu_shangpinmingcheng"
            android:text="美的赛克斯"
            android:paddingRight="@dimen/size_10dp"
            android:textColor="@color/text_fu_colcr"
            android:textSize="@dimen/size_14dp"
            android:paddingLeft="@dimen/size_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="@dimen/size_10dp"
            android:paddingRight="@dimen/size_10dp"
            android:paddingLeft="@dimen/size_10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/home_gouwu_shangpinjiage"
                android:layout_weight="1"
                android:text="200积分"
                android:textColor="@color/text_fu_colcr"
                android:textSize="@dimen/size_12dp"
                android:layout_width="@dimen/size_0dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
            <TextView
                android:focusable="false"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="@dimen/size_5dp"
                android:paddingRight="@dimen/size_5dp"
                android:id="@+id/gouwu_btn_lijigoumai"
                android:background="@drawable/button_shape"
                android:textSize="@dimen/size_12dp"
                android:textColor="@color/white"
                android:text="立即兑换"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_25dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>