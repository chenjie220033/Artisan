<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45dp"
        android:background="@color/zhutise">

        <ImageView
            android:id="@+id/my_yonghu_sznc_fh"
            android:layout_width="@dimen/size_45dp"
            android:layout_height="@dimen/size_45dp"
            android:padding="@dimen/size_6dp"
            android:src="@drawable/ic_chevron_left_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="设置昵称"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16dp" />
    </RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_15dp"
    android:background="@color/fengexiancu"/>
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_1px"
    android:background="@color/fengexianxi"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="@dimen/size_40dp"
        android:padding="@dimen/size_10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp">
        <TextView
            android:text="设置昵称"
            android:textColor="@color/text_colcr"
        android:layout_gravity="center_vertical"
            android:textSize="@dimen/size_14dp"
            android:gravity="center"
            android:paddingRight="@dimen/size_10dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_40dp" />
        <EditText
            android:cursorVisible="false"
            android:singleLine="true"
            android:paddingLeft="@dimen/size_10dp"
            android:textColor="@color/text_colcr"
            android:textColorHint="@color/hint"
            android:textSize="@dimen/size_14dp"
            android:id="@+id/my_shezhi_nicheng"
            android:background="@drawable/textview_bk"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp" />
    </LinearLayout>
    <Button
        android:text="确认保存"
        android:id="@+id/my_qrbc"
        android:textColor="@color/white"
        android:textSize="@dimen/size_16dp"
        android:paddingLeft="@dimen/size_20dp"
        android:paddingRight="@dimen/size_20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_shape"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_40dp" />
</LinearLayout>