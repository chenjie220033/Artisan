<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_huo_dong_bao_ming"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.administrator.artisan.mores.tieba.gouwu.HuoDongBaoMingActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45dp"
        android:background="@color/zhutise">

        <ImageView
            android:id="@+id/huodong_baoming_fh"
            android:layout_width="@dimen/size_45dp"
            android:layout_height="@dimen/size_45dp"
            android:padding="@dimen/size_6dp"
            android:src="@drawable/ic_chevron_left_black_24dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingLeft="@dimen/size_5dp"
            android:text="活动报名"
            android:textColor="@color/colorBai"
            android:textSize="@dimen/size_16dp" />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="@dimen/size_25dp"
        android:paddingLeft="@dimen/size_10dp"
        android:textSize="@dimen/size_16dp"
        android:textColor="@color/text_colcr"
        android:text="联系人："
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp" />
    <EditText
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_marginRight="@dimen/size_10dp"
        android:background="@drawable/textview_bk"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp" />
    <TextView
        android:layout_marginTop="@dimen/size_25dp"
        android:paddingLeft="@dimen/size_10dp"
        android:textSize="@dimen/size_16dp"
        android:textColor="@color/text_colcr"
        android:text="手机号："
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp" />
    <EditText
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_marginRight="@dimen/size_10dp"
        android:background="@drawable/textview_bk"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp" />
    <TextView
        android:layout_marginTop="@dimen/size_25dp"
        android:paddingLeft="@dimen/size_10dp"
        android:textSize="@dimen/size_16dp"
        android:textColor="@color/text_colcr"
        android:text="总人数："
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp" />
    <EditText
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_marginRight="@dimen/size_10dp"
        android:background="@drawable/textview_bk"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp" />
    <Button
        android:layout_margin="@dimen/size_30dp"
        android:background="@drawable/button_shape"
        android:textColor="@color/white"
        android:textSize="@dimen/size_18dp"
        android:text="提交报名"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
