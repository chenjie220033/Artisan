<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_15dp"
        android:background="@color/fengexiancu" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_180dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/gouwu_meidi" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/test"
                android:background="@color/heise"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45dp"
                android:orientation="horizontal"
                android:padding="@dimen/size_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="举办时间："
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/size_5dp"
                    android:gravity="center_vertical"
                    android:text="2017-05-20"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="07:00-18:00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_14dp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/size_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/size_10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="[美食吃货]年末回馈，点评送送送！"
                android:textColor="@color/text_colcr"
                android:textSize="@dimen/size_14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_5dp"
                android:text="74人报名"
                android:textColor="@color/hint"
                android:textSize="@dimen/size_12dp" />
        </LinearLayout>

        <Button
            android:id="@+id/huodong_lijicanjia"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/size_10dp"
            android:background="@drawable/button_shape"
            android:text="立即参加"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:background="@color/fengexianxi" />
</LinearLayout>