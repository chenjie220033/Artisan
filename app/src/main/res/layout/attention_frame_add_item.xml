<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_90dp"
        android:orientation="horizontal"
        android:padding="@dimen/size_10dp">

        <ImageView
            android:layout_width="@dimen/size_90dp"
            android:layout_height="@dimen/size_70dp"
            android:scaleType="fitXY"
            android:src="@drawable/thumb_5624840c310d8" />

        <LinearLayout
            android:layout_width="@dimen/size_0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/size_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="测试"
                android:textColor="@color/text_colcr"
                android:textSize="@dimen/size_16dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="泽州路1751号"
                android:textColor="@color/text_fu_colcr"
                android:textSize="@dimen/size_12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/size_80dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:gravity="center"
                android:text="1.68km"
                android:textColor="@color/text_colcr"
                android:textSize="@dimen/size_14dp" />

            <TextView
                android:layout_width="@dimen/size_80dp"
                android:layout_height="@dimen/size_0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.5"
                android:background="@drawable/wenzikuang"
                android:gravity="center"
                android:text="关注商家"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/size_14dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>