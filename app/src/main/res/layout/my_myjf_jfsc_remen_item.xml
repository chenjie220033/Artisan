<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_15dp"
        android:background="@color/fengexiancu" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:background="@color/fengexianxi" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_90dp"
        android:orientation="horizontal"
        android:padding="@dimen/size_10dp">

        <ImageView
            android:layout_width="@dimen/size_90dp"
            android:layout_height="@dimen/size_70dp"
            android:scaleType="fitXY"
            android:src="@drawable/thumb_5624840c310d8" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/size_10dp">

            <TextView
                android:id="@+id/titles"
                android:textColor="@color/text_colcr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_10dp"
                android:text="花生油"
                android:textSize="@dimen/size_16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="积分："
                    android:textColor="@color/hint"
                    android:textSize="@dimen/size_12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="100"
                    android:textColor="@color/hint"
                    android:textSize="@dimen/size_12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/size_10dp"
                    android:text="原价："
                    android:textColor="@color/hint"
                    android:textSize="@dimen/size_12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="¥100"
                    android:textColor="@color/hint"
                    android:textSize="@dimen/size_12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="数量："
                    android:textColor="@color/hint"
                    android:textSize="@dimen/size_12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="63"
                    android:textColor="@color/hint"
                    android:textSize="@dimen/size_12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/size_10dp"
                    android:text="以兑："
                    android:textColor="@color/hint"
                    android:textSize="@dimen/size_12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="37"
                    android:textColor="@color/hint"
                    android:textSize="@dimen/size_12dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/jifen_remen_duihuan"
            android:longClickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:background="@drawable/button_shape"
            android:paddingBottom="@dimen/size_5dp"
            android:paddingLeft="@dimen/size_15dp"
            android:paddingRight="@dimen/size_15dp"
            android:paddingTop="@dimen/size_5dp"
            android:text="兑换"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16dp" />
    </LinearLayout>
</LinearLayout>