<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_shang_pin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.administrator.artisan.mores.tieba.gouwu.HomeShangPinActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45dp"
        android:background="@color/zhutise">

        <ImageView
            android:id="@+id/my_gouwu_shangpin_fh"
            android:layout_width="@dimen/size_45dp"
            android:layout_height="@dimen/size_45dp"
            android:padding="@dimen/size_6dp"
            android:src="@drawable/ic_chevron_left_black_24dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="商品"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/home_shangpin_fenlei"
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/home_shangpin_fenlei_tv"
                        android:layout_width="@dimen/size_0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="全部分类"
                        android:textColor="@color/text_colcr"
                        android:textSize="@dimen/size_12dp" />

                    <ImageView
                        android:id="@+id/jiantou1"
                        android:layout_width="@dimen/size_10dp"
                        android:layout_height="@dimen/size_10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size_3dp"
                        android:src="@drawable/icon_down" />
                </com.zhy.android.percent.support.PercentLinearLayout>

                <View
                    android:layout_width="@dimen/size_1px"
                    android:layout_height="match_parent"
                    android:background="@color/fengexianxi" />

                <LinearLayout
                    android:id="@+id/home_shangpin_quancheng"
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/home_shangpin_quancheng_tv"
                        android:layout_width="@dimen/size_0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="全城"
                        android:textColor="@color/text_colcr"
                        android:textSize="@dimen/size_12dp" />


                    <ImageView
                        android:id="@+id/jiantou2"
                        android:layout_width="@dimen/size_10dp"
                        android:layout_height="@dimen/size_10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size_3dp"
                        android:src="@drawable/icon_down" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/size_1px"
                    android:layout_height="match_parent"
                    android:background="@color/fengexianxi" />

                <LinearLayout
                    android:id="@+id/home_shangpin_paixu"
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/home_shangpin_paixu_tv"
                        android:layout_width="@dimen/size_0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="排序"
                        android:textColor="@color/text_colcr"
                        android:textSize="@dimen/size_12dp" />


                    <ImageView
                        android:id="@+id/jiantou3"
                        android:layout_width="@dimen/size_10dp"
                        android:layout_height="@dimen/size_10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size_3dp"
                        android:src="@drawable/icon_down" />
                </LinearLayout>
            </com.zhy.android.percent.support.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1px"
                android:background="@color/fengexianxi" />

            <include
                layout="@layout/home_shangpin_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/home_shangpin_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/home_shangpin_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/home_shangpin_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/home_shangpin_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/home_shangpin_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/home_shangpin_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/home_shangpin_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </com.zhy.android.percent.support.PercentLinearLayout>
    </ScrollView>
</com.zhy.android.percent.support.PercentLinearLayout>
