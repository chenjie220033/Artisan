<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.artisan.mores.tieba.gouwu.GouWuCheZhiFuActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45dp"
        android:background="@color/zhutise">

        <ImageView
            android:id="@+id/my_gouwuche_zhifu_fh"
            android:layout_width="@dimen/size_45dp"
            android:layout_height="@dimen/size_45dp"
            android:padding="@dimen/size_6dp"
            android:src="@drawable/ic_chevron_left_black_24dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="支付订单"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16dp" />
    </RelativeLayout>
    <LinearLayout
        android:paddingRight="@dimen/size_20dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp">
        <View
            android:layout_weight="1"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:text="新增收货地址"
            android:textSize="@dimen/size_14dp"
            android:gravity="center"
            android:textColor="@color/zhutise"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:background="@color/fengexianxi"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_15dp"
        android:background="@color/fengexiancu"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:background="@color/fengexianxi"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp"
        android:layout_marginLeft="@dimen/size_10dp"
        android:gravity="center_vertical"
        android:text="支付方式"
        android:textColor="@color/text_fu_colcr"
        android:textSize="@dimen/size_16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/fengexianxi" />

    <RelativeLayout
        android:id="@+id/gouwuche_zhifu_zhifubao"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_70dp">

        <ImageView
            android:id="@+id/iv_zhifubao"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_margin="@dimen/size_15dp"
            android:src="@drawable/pay_ico1" />

        <TextView
            android:id="@+id/tv_zhifubao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/hint"
            android:layout_alignBottom="@+id/iv_zhifubao"
            android:layout_toEndOf="@+id/iv_zhifubao"
            android:layout_toStartOf="@+id/smoothCheckBox1"
            android:text="推荐已安装支付宝客户端的用户使用"
            android:textSize="@dimen/size_12dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_zhifubao"
            android:layout_toEndOf="@+id/iv_zhifubao"
            android:layout_toStartOf="@+id/smoothCheckBox1"
            android:text="支付宝"
            android:textColor="@color/text_colcr"
            android:textSize="@dimen/size_14dp" />

        <com.example.administrator.artisan.zhifu.SmoothCheckBox
            android:id="@+id/smoothCheckBox1"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:visibility="invisible"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/size_15dp"
            android:layout_marginTop="20dp"
            app:color_checked="@color/zhutise"
            app:color_unchecked_stroke="@color/zhutise" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:background="@color/fengexianxi" />

    <RelativeLayout
        android:id="@+id/gouwuche_zhifu_yue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_70dp">

        <ImageView
            android:id="@+id/iv_yue"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_margin="@dimen/size_15dp"
            android:src="@drawable/pay_ico4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_15dp"
            android:layout_toEndOf="@+id/iv_yue"
            android:layout_toStartOf="@+id/smoothCheckBox2"
            android:text="余额支付"
            android:textColor="@color/text_colcr"
            android:textSize="@dimen/size_14dp" />

        <TextView
            android:id="@+id/tv_yue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_yue"
            android:layout_toEndOf="@+id/iv_yue"
            android:textColor="@color/hint"
            android:layout_toStartOf="@+id/smoothCheckBox2"
            android:text="推荐已安装支付宝客户端的用户使用"
            android:textSize="@dimen/size_12dp" />

        <com.example.administrator.artisan.zhifu.SmoothCheckBox
            android:id="@+id/smoothCheckBox2"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:visibility="invisible"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/size_15dp"
            android:layout_marginTop="20dp"
            app:color_checked="@color/zhutise"
            app:color_unchecked_stroke="@color/zhutise" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:background="@color/fengexianxi" />

    <RelativeLayout
        android:id="@+id/gouwuche_zhifu_weixin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_70dp">

        <ImageView
            android:id="@+id/iv_weixin"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_margin="@dimen/size_15dp"
            android:src="@drawable/pay_ico3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_15dp"
            android:layout_toEndOf="@+id/iv_weixin"
            android:layout_toStartOf="@+id/smoothCheckBox3"
            android:text="微信"
            android:textColor="@color/text_colcr"
            android:textSize="@dimen/size_14dp" />

        <TextView
            android:id="@+id/tv_weixin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/hint"
            android:layout_alignBottom="@+id/iv_weixin"
            android:layout_toEndOf="@+id/iv_weixin"
            android:layout_toStartOf="@+id/smoothCheckBox3"
            android:text="推荐已安装支付宝客户端的用户使用"
            android:textSize="@dimen/size_12dp" />

        <com.example.administrator.artisan.zhifu.SmoothCheckBox
            android:id="@+id/smoothCheckBox3"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:visibility="invisible"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/size_15dp"
            android:layout_marginTop="20dp"
            app:color_checked="@color/zhutise"
            app:color_unchecked_stroke="@color/zhutise" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:background="@color/fengexianxi" />

    <RelativeLayout
        android:id="@+id/gouwuche_zhifu_hdfkuan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_70dp">

        <ImageView
            android:id="@+id/iv_hdfk"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_margin="@dimen/size_15dp"
            android:src="@drawable/zhifu_tupian" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_15dp"
            android:layout_toEndOf="@+id/iv_hdfk"
            android:layout_toStartOf="@+id/smoothCheckBox4"
            android:text="货到付款"
            android:textColor="@color/text_colcr"
            android:textSize="@dimen/size_14dp" />

        <TextView
            android:id="@+id/tv_hdfk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/hint"
            android:layout_alignBottom="@+id/iv_hdfk"
            android:layout_toEndOf="@+id/iv_hdfk"
            android:layout_toStartOf="@+id/smoothCheckBox4"
            android:text="推荐已安装支付宝客户端的用户使用"
            android:textSize="@dimen/size_12dp" />

        <com.example.administrator.artisan.zhifu.SmoothCheckBox
            android:id="@+id/smoothCheckBox4"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:layout_marginRight="@dimen/size_15dp"
            android:layout_marginTop="20dp"
            app:color_checked="@color/zhutise"
            app:color_unchecked_stroke="@color/zhutise" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:background="@color/fengexianxi" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_15dp"
        android:background="@color/fengexiancu"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:background="@color/fengexianxi" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_70dp"
        android:layout_marginBottom="@dimen/size_70dp">

        <Button
            android:id="@+id/gouwuche_zhifu_querzf"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50dp"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/size_10dp"
            android:background="@drawable/button_shape"
            android:text="确认支付"
            android:textColor="@color/colorBai"
            android:textSize="@dimen/size_18dp" />
    </RelativeLayout>
</LinearLayout>
