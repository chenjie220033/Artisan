<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.administrator.artisan.mores.tieba.gouwu.GouWuCheActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45dp"
        android:background="@color/zhutise">

        <ImageView
            android:id="@+id/my_gouwuche_fh"
            android:layout_width="@dimen/size_45dp"
            android:layout_height="@dimen/size_45dp"
            android:padding="@dimen/size_6dp"
            android:src="@drawable/ic_chevron_left_black_24dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="购物车"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16dp" />

    </RelativeLayout>
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">
       <ListView
           android:scrollbars="none"
           android:id="@+id/gouwuche_list"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:layout_above="@+id/linearLayout2" />
     <View
         android:layout_above="@+id/linearLayout2"
         android:layout_width="match_parent"
         android:layout_height="@dimen/size_1px"
         android:background="@color/fengexianxi"/>
    <RelativeLayout
        android:id="@+id/houwuxiangqing_gwc_image"
        android:layout_width="@dimen/size_60dp"
        android:layout_height="@dimen/size_60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/size_5dp"
        android:layout_marginLeft="@dimen/size_10dp"
        android:background="@drawable/circle_red"
        android:clickable="true">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/shopping_cart"
            android:layout_width="@dimen/size_35dp"
            android:layout_height="@dimen/size_35dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_shopping_cart_white_24dp" />

        <TextView
            android:id="@+id/shopping_cart_total_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/small_red_circle"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/size_10dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="@dimen/size_54dp"
         android:layout_alignParentBottom="true"
         android:layout_alignParentStart="true"
         android:id="@+id/linearLayout2">

         <TextView
             android:layout_marginLeft="@dimen/size_80dp"
             android:text="合计："
             android:textColor="@color/text_colcr"
             android:textSize="@dimen/size_16dp"
             android:gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="match_parent" />

         <TextView
             android:text="¥45"
             android:textColor="@color/zhutise"
             android:textSize="@dimen/size_18dp"
             android:gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="match_parent" />
         <View
             android:layout_width="@dimen/size_0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"/>
         <Button
             android:id="@+id/gouwuche_jiesuan"
             android:layout_margin="@dimen/size_10dp"
             android:layout_width="wrap_content"
             android:text="结算"
             android:textColor="@color/white"
             android:textSize="@dimen/size_16dp"
             android:background="@drawable/button_shape"
             android:layout_height="match_parent" />
     </LinearLayout>
 </RelativeLayout>
</LinearLayout>
